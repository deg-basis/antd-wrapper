{
  "name": "crux",
  "version": "1.0.0",
  "description": "Components for Rosette User eXperience",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "lint": "eslint --fix \"**/*.{ts,tsx}\"",
    "stylelint": "stylelint --fix \"src/**/*.css\"",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "clean": "rimraf ./dist"
  },
  "peerDependencies": {
    "classnames": "^2.2.6",
    "react": "^16.13.0"
  },
  "devDependencies": {
    "classnames": "^2.2.6",
    "react": "^16.13.0",
    "@types/classnames": "^2.2.10",
    "@types/react": "^16.9.23",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "react-docgen": "^5.3.0",
    "react-docgen-typescript": "^1.16.2",
    "react-dom": "^16.13.0",
    "react-styleguidist": "^11.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": "prettier --write",
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.css": "stylelint --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
